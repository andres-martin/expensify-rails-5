<% if @expense.errors.empty? %>
    $("#product-modal").on("ajax:success", () => {
        $('table tbody').append('<%= j render 'row', expense: @expense %>');
        $("#product-modal").remove();
        $('.modal-backdrop').remove();
        $('body').removeClass('modal-open')
    });

<% else %>

    $('#concept label').addClass('text-danger');
    $('#concept input').addClass('error');
    
    const value_label = $('#concept label').text();
    let error_value;
    <% @expense.errors.full_messages.each do |item| %>
     if ( value_label.includes("<%= item.split(' ')[0] %>") ){
        $('#concept p').text(`${value_label}`).show();
     }

    <% end %>
    <% @expense.errors.full_messages[1].html_safe %>
<% end %>
